<Window x:Class="WPF13D.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF13D"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Label FontWeight="Bold" FontSize="20">Magst du mich?</Label>
        <RadioButton Margin="5" Checked="Ja_RadioButton_Checked">
            <WrapPanel>
                <Rectangle Fill="Green" Width="16" Height="16"/>
                <TextBlock Text="Ja" Foreground="Green" Margin="5,0,0,0" />
            </WrapPanel> 
        </RadioButton>
        <RadioButton Margin="5" Checked="Nein_RadioButton_Checked">
            <WrapPanel>
                <Rectangle Fill="Red" Width="16" Height="16"/>
                <TextBlock Text="Nein" Foreground="Red" Margin="5,0,0,0" />
            </WrapPanel>
        </RadioButton>
        <RadioButton Name="rbMaybe" Margin="5" Checked="Vielleicht_RadioButton_Checked">
            <WrapPanel>
                <Image Source="C:\Users\Denis Panjuta\source\repos\WPF13D\WPF13D\maybe.png" Width="32" Height="32" />
                <TextBlock Text="Vielleicht" VerticalAlignment="Center" Margin="5,0,0,0" />
            </WrapPanel>
        </RadioButton>
    </StackPanel>
</Window>
